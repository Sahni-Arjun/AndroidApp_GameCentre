<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="@string/choose_game_menu_message"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintEnd_toEndOf="@+id/SlidingTiles"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/SlidingTiles"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SlidingTiles"
        android:layout_width="318dp"
        android:layout_height="79dp"
        android:layout_marginBottom="388dp"
        android:text="@string/choose_game_menu_slidingtiles"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnHangMan"
        android:layout_width="318dp"
        android:layout_height="79dp"
        android:layout_marginBottom="228dp"
        android:text="HangMan"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSudoku"
        android:layout_width="318dp"
        android:layout_height="79dp"
        android:layout_marginBottom="68dp"
        android:text="Sudoku"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>